<?xml version="1.0" encoding="UTF-8"?>
<Context path="/his">
    <Resource
            name="jdbc/his"
            scope="Shareable"
            auth="Container"
            type="javax.sql.DataSource"
            username="${db.username}"
            password="${db.password}"
            driverClassName="com.mysql.jdbc.Driver"
            url="${db.url}"
            maxActive="15"
            maxIdle="3"
            connectionProperties="useUnicode=true;characterEncoding=UTF-8"/>
</Context>
