<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <filter>
        <filter-name>StaticFilter</filter-name>
        <filter-class>az.his.filters.StaticFilter</filter-class>
    </filter>
    <filter>
        <filter-name>TransactionFilter</filter-name>
        <filter-class>az.his.filters.TransactionFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>az.his.filters.AuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>StaticFilter</filter-name>
        <url-pattern>*.jpg</url-pattern>
        <url-pattern>*.gif</url-pattern>
        <url-pattern>*.png</url-pattern>
        <url-pattern>*.css</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>TransactionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <context-param>
        <param-name>path.root</param-name>
        <param-value>/his/</param-value>
    </context-param>

    <context-param>
        <param-name>page.main</param-name>
        <param-value>main.jsp</param-value>
    </context-param>

    <context-param>
        <param-name>page.login</param-name>
        <param-value>login.jsp</param-value>
    </context-param>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
